<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CALSAKAY" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/oca</item>
        <item name="colorPrimaryVariant">@color/oca</item>
        <item name="colorOnPrimary">@color/oca</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/oca</item>
        <item name="colorSecondaryVariant">@color/oca</item>
        <item name="colorOnSecondary">@color/oca</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@font/arial</item>
        <item name="android:buttonStyle">@font/arial</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>